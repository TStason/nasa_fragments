<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_margin="10dp"
                                                   android:background="#E4E1E1"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:id="@+id/linearLayout">

    <TextView
            android:id="@+id/media_title"
            android:text="Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@+id/media_owner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/media_owner"
            android:text="Media owner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/media_title"
            app:layout_constraintBottom_toTopOf="@+id/media_description"
            app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:text="2017-03-07T00:00:00Z"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/media_date_created"
            app:layout_constraintStart_toEndOf="@+id/media_owner" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/media_owner"/>
    <TextView
            android:id="@+id/media_description"
            android:text="Description -- Description -- Description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/media_owner"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="[ keywords, keywords, ... ]"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/media_keywords"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/media_description"/>
    <TextView
            android:text="AUDIO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toEndOf="@+id/media_title"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/media_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>